general {
    gaps_in = 3
    gaps_out = 6
    border_size = 4
    resize_on_border = true
    col.active_border = rgba(7D009CFF)  # Lighter Midnight Purple
    col.inactive_border = rgba(4B0082FF)  # Midnight Purple

    # Better defaults for usability
    layout = dwindle
}


# Input settings with better defaults
input {
    follow_mouse = 1
    kb_layout = us
    sensitivity = 0.5
    accel_profile = flat
    numlock_by_default = true
    touchpad {
        natural_scroll = true
        disable_while_typing = true
        scroll_factor = 0.5
    }
}

decoration {
    rounding = 12

    inactive_opacity = 0.8
    fullscreen_opacity = 1.0

    dim_inactive = true
    dim_strength = 0.2
    dim_special = 0.1
    dim_around = 0.3

    blur {
        enabled = true
        size = 8  # Slightly higher for more pronounced effect
        passes = 3 # One more pass for smoother blur
        new_optimizations = true
        xray = true  # This looks cool with proper transparency
        noise = 0.012
        contrast = 0.9
        brightness = 0.85
    }

    shadow {
        enabled = true
        range = 30
        render_power = 3
        sharp = false
        ignore_window = true
        color = rgba(4B0082AA)  # Midnight Purple with transparency
        scale = 1.0
    }
}


animations {
    enabled = true

    bezier = easeOutQuint, 0.22, 1, 0.36, 1
    bezier = easeInOutQuint, 0.83, 0, 0.17, 1

    animation = windows, 1, 6, easeInOutQuint, slide
    animation = windowsIn, 1, 6, easeOutQuint, slide
    animation = windowsOut, 1, 5, default, popin 80%
    animation = border, 1, 8, default
    animation = fade, 1, 7, default
    animation = workspaces, 1, 5, easeInOutQuint, slide
}


dwindle {
    pseudotile = true
    preserve_split = true
}

